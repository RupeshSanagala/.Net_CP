@{
    ViewData["Title"] = "Information List";
}

@model IEnumerable<Information>
<h1 class="bg-info text-black">Information List</h1>
<a asp-action="Create" class="btn btn-secondary">Create Information</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>License</th>
        <th>Established</th>
        <th>Revenue</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (Information info in Model)
    {
        <tr>
            <td>@info.Id</td>
            <td>@info.Name</td>
            <td>@info.License</td>
            <td>@info.Established</td>
            <td>@info.Revenue</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update"
                   asp-route-id="@info.Id">Update</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@info.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

